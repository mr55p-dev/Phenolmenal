  ISSN = {01968904},
  JOURNALTITLE = {Energy Conversion and Management},
  KEYWORDS = {Catalyst,Hydrogen,Water decomposition,Water gas shift reaction},
  NUMBER = {10},
  PAGES = {2801--2808},
  TITLE = {{An experimental study on carbon monoxide conversion and hydrogen generation from water gas shift reaction}},

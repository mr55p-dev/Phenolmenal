  ISBN = {9781782422273},
  JOURNALTITLE = {Membrane Reactors for Energy Applications and Basic Chemical Production},
  KEYWORDS = {Fixed bed reactor,Hydrogen,Membrane reactor,Methane,Modeling,Reforming},
  PAGES = {31--59},
  TITLE = {{Membrane reactors for methane steam reforming (MSR)}},
}

